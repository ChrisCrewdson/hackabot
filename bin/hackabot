#!/usr/bin/env python

import os
import sys

if __name__ == "__main__":
    # Assume this file is HB_ROOT/bin/hackabot
    root = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
    sys.path.append("%s/lib/python" % root)

    from hackabot import main, env

    env.init(root)
    main.main()
