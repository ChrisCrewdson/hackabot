<hackabot>
	<directory>/home/hackabot/hackabot</directory>
	<commands>commands</commands>
	<hooks>hooks</hooks>
	<etc>etc</etc>
	<socket>sock</socket>

	<server>irc.something.net</server>
	<port>6667</port>
	<nick>hackabot</nick>
	<name>A spiffy little bot</name>

	<!-- Send these messages just after connecting but before joining -->
	<!-- This is useful for talking with chanserv and nickserv -->
	<automsg to="nickserv" msg="identify something" />
	<automsg to="chanserv" msg="invite #somechan" />

	<!-- Chanels to auto join. msg and password are optional -->
	<autojoin chan="#somechan" />
	<autojoin chan="#amazing" msg="I'm here!" />
	<autojoin chan="#private" password="pass" />

	<!-- Command specific config options -->
	<cmdconfig>
		<topic>
			<!-- topic mask prepends msg before every topic -->
			<topicmask chan="#somechan" msg="CoolPeople :: " />
		</topic>
		<google>
			<apikey>XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX</apikey>
		</google>
		<database>
			<host>dbhost.some.org</host>
			<user>dbuser</user>
			<name>dbname</name>
			<pass>dbpass</pass>
		</database>
	</cmdconfig>
</hackabot>
